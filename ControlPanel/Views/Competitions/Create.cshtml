@model ControlPanel.Models.Competition

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="/jquery.datetimepicker.css"/ >

<h2>ادخل معلومات المسابقة</h2>

 
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Resources.UserWork.Name
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
        Status
        <div class="col-md-10">
            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="form-group">
               الهدف
        <div class="col-md-10">
            <div class="input-group">
                @Html.DropDownList("Goal", new List<SelectListItem>
                                            { new SelectListItem { Text="أسرع مفسر", Value="Fastest"},
                                              new SelectListItem{Text="أعلى مفسر تقييم", Value="Highest_Rating"},
                                              new SelectListItem{Text="أعلى معدل طلب", Value="AVG_Request"},
                                              new SelectListItem{Text="أعلى خدمات مفسرة", Value="Most_Done_Services"}
                                            }, "Select Goal")
                @Html.ValidationMessageFor(model => model.Goal)
            </div>
        </div>
    </div>


    <div class="form-group">
        تخصص المسابقة
        <div class="col-md-10">
            <div class="input-group">
                @Html.DropDownList("UserWorkId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserWorkId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-group">
        تاريخ بدء المسابقة
        <div class="col-md-10">
            <div class='input-group date' id='date'>

                @Html.TextBoxFor(model => model.StartDate, new { type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.StartDate)

            </div>
        </div>
    </div>
    


    @*<div class="form-group">
        End Date
        <div class="col-md-10">
            <div class="input-group">
                @Html.TextBoxFor(model => model.EndDate, new { type = "date" })
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>
    </div>*@
    


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Resources.UserWork.Create " class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(@Resources.Global.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script src="jquery.min.js"></script>
<script src="jquery-ui.min.js"></script>
<script src="jquery-ui-timepicker-addon.js"></script> <script type="text/javascript">
    $(document).ready(function () {
        $("#date").datetimepicker({
            dateFormat: 'dd-mm-yy', timeFormat: 'hh:mm:ss'
        });
    });
</script>
}

