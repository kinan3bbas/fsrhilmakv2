@model List<ControlPanel.ViewModels.UserInfoViewModel>
@{
    ViewBag.Title = "DeletedUsers";
    Layout = "~/Views/Shared/_PLayout.cshtml";
}

<h2>DeletedUsers</h2>
<div>
    <h2 style="color: #8b224e">Deleted Users</h2>
    <br />

    <table id="myTable" class="table table-striped table-bordered table-hover">
        <thead style="background-color:#6610f2;color:white;font-weight:bold;align-content:center">
            <tr>
                <th>User Name</th>
                <th>User Type</th>
                <th>Status</th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@user.UserName, "PersonalPage", new { id = @user.Id }, null)
                    </td>
                    <td>@user.Type</td>
                    <th>@user.Status</th>
                </tr>
            }
        </tbody>
    </table>
    <br />


</div>
