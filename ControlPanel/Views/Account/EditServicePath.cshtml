@model ControlPanel.Models.ServicePath

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_PLayout.cshtml";
    var Id = Request.QueryString["ServiceProviderId"];

}

<h2>@Resources.Global.EditServicePathInformation</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Resources.UserWork.Name
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Resources.Global.Cost
        <div class="col-md-10">
            @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Resources.UserWork.Enabled
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Enabled)
                @Html.ValidationMessageFor(model => model.Enabled, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        الرسالة
        <div class="col-md-10">
            <div class="checkbox">
                @Html.TextAreaFor(model => model.Message)
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        نسبة المفسر
        <div class="col-md-10">
            <div class="checkbox">
                @Html.TextAreaFor(model => model.Ratio)
                @Html.ValidationMessageFor(model => model.Ratio, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>








    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Resources.Global.Save " class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(@Resources.Global.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}