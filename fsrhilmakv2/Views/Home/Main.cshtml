@model fsrhilmakv2.Models.Statistics
@{
    Layout = "~/Views/Shared/_Layout_main.cshtml";
    ViewBag.Title = "Home Page";
}
<link rel="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<body>

    <!--Statistics-->
    <div class="counter" style="font-size:x-large!important;background-image: url('img_tree.gif')">
        <div class="container" style="margin-top:10px!important;">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" style="text-align:center!important;">
                    <div class="customer">
                        <p class="counter-count">
                          
                        @Model.AllActiveServices</p>
                        <p class="customer-p">
                            @*<img src="~/Images/done.png" style="height:50px;width:50px;background-color:#6f7e96" />*@
                        الزيارات</p>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" style="text-align:center!important;">
                    <div class="customer">
                        <p class="counter-count">@Model.AllActiveServices</p>
                        <p class="customer-p">الخدمات قيد التفسير</p>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" style="text-align:center!important;">
                    <div class="design">
                        <p class="counter-count">@Model.AllDoneServices</p>
                        <p class="design-p">الخدمات المفسرة</p>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" style="text-align:center!important;">
                    <div class="order">
                        <p class="counter-count">@Model.AllServices</p>
                        <p class="order-p">الخدمات</p>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" style="text-align:center!important;">
                    <div class="order">
                        <p class="counter-count">@Model.AllServiceProviders</p>
                        <p class="order-p">مقدمو الخدمات</p>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12" style="text-align:center!important;">
                    <div class="order">
                        <p class="counter-count">@Model.AllUsers</p>
                        <p class="order-p">المستخدمون</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    
    <!--Main Body-->
    <div class="container row" style="margin-top:-10px" >
        <div id="Body" class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Images/Services/Family.png"  style="width:100%;height:300px;background-color:#49689a"/>
                    <h1>استشارة أسرية</h1>
                    <p class="price">مستشار أسري @Model.AllIstasharaUsers </p>
                    <p>الحصول على استشارة للمشاكل الأسرية</p>
                    <p><button>عرض الاستشارات الأسرية</button></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Images/Services/Iftaa.png" style="width:100%;height:300px;background-color:#49689a" />
                    <h1>فتوى شرعية</h1>
                    <p class="price"> مفتي شرعي @Model.AllIftaaUsers</p>
                    <p>الحصول على فتوى شرعية</p>
                    <p><button>عرض الفتاوي الشرعية</button></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Images/Services/Dream2.png" style="width:100%;height:300px;background-color:#49689a" />
                    <h1>تفسير الأحلام</h1>
                    <p class="price">@Model.AllDreamUsers مفسر أحلام</p>
                    <p>تفسير حلمك مع أمهر المفسرين</p>
                    <p><button>عرض الأحلام</button></p>
                </div>
            </div>
            
        </div>
        <div id="Body" class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Images/Services/Medical.png" style="width:100%;height:300px;background-color:#49689a"/>
                    <h1>استشارة طبية</h1>
                    <p class="price">@Model.AllMedicalUsers مستشار طبي</p>
                    <p>الحصول على استشارة طبية من أمهر المستشارين الطبيين</p>
                    <p><button>عرض الاستشارات الطبية</button></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Images/Services/Law.png" style="width:100%;height:300px;background-color:#49689a" />
                    <h1>استشارة قانونية</h1>
                    <p class="price">@Model.AllLawUsers مستشار قانوني</p>
                    <p>الحصول على أفضل الاستشارات القانونية</p>
                    <p><button>عرض الاستشارات القانونية</button></p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Images/Services/Rouqia.png" style="width:100%;height:300px;background-color:#49689a" />
                    <h1>رقية شرعية</h1>
                    <p class="price">@Model.AllRouqiaUsers راقي شرعي</p>
                    <p>الحصول على أفضل الرقيات</p>
                    <p><button>عرض الرقيات الشرعية</button></p>
                </div>
            </div>

        </div>
    </div>

    
</body>
@section Scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
}